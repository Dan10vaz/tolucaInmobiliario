extends ../layout/index

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Toluca
            span.font-normal GrupoInmobiliario
        h2.text-center.text-2xl.font-extrabold=pagina

        div(class="bg-white shadow-2xl py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Informacion General
                    p.text-gray-600 AÃ±ade informacion sobre la propiedad en venta

                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="titulo") Titulo de anuncio:
                        input#titulo.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-600.text-center(placeholder="Titulo Propiedad, ej. Casa en la Playa" type="text" name="titulo")
                    
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="descripcion") Descripcion:
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-600.text-center(placeholder="Descripcion de la Propiedad" name="descripcion")
                    
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="categoria") Categoria:
                            select#categoria.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-600.text-center(name="categoria")
                                option(value="") - Selecciona -
                        
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="estatus") Estatus:
                            select#estatus.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-600.text-center(name="estatus")
                                option(value="") - Selecciona -
                        
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="precio") Precio:
                            select#precio.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-600.text-center(name="precio")
                                option(value="") - Selecciona -
                    
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="habitaciones") Habitaciones:
                            select#habitaciones.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-600.text-center(name="habitaciones")
                                option(value="") - Selecciona -
                                - var n = 0;
                                    while n <= 10
                                        option(value=n) #{n++}
                        
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="estacionamiento") Estacionamiento:
                            select#estacionamiento.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-600.text-center(name="estacionamiento")
                                option(value="") - Selecciona -
                                - var n = 0;
                                    while n <= 10
                                        option(value=n) #{n++}
                                
                        
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="wc") WC:
                            select#wc.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-600.text-center(name="wc")
                                option(value="") - Selecciona -
                                - var n = 0;
                                    while n <= 10
                                        option(value=n) #{n++}
                    
                    div.border-gray-200.border-t.py-5.space-y-5
                        h3.text-lg.leading-6.font-medium.text-gray-900 Ubicacion
                        p.text-gray-600 Ubica la propiedad en el mapa
                        #mapa.h-96

                        div
                            p.calle.text-center.font-bold
                        
                        input(type="hidden" name="calle" id="calle")
                        input(type="hidden" name="lat" id="lat")
                        input(type="hidden" name="lng" id="lng")

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")