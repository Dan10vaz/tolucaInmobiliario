extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Grupo
            span.font-normal Tolucanmobiliario
        h2.text-center.text-2xl.font-extrabold=pagina

        if errores
            div(class="max-w-md mx-auto my-5")
                each error in errores
                    p.text-red-400.uppercase.text-sm.text-center.p-1.mb-1.font-bold=error.msg
        

        .mt-8.mx-auto.max-w-md
            .bg-blue-100.py-8.px-4.shadow-2xl.rounded-lg
                form.space-y-5(method="POST", noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Ingresa tu nuevo password:
                        input#password.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-600.text-center(type="password" name="password")

                    input(class="w-full bg-indigo-500 hover:bg-indigo-700 text-white font-bold cursor-pointer py-2 rounded-md" type="submit" value="Guardar Password")
