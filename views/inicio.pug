extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    div(class="py-2 text-center")
        h1(class="text-center text-4xl font-extrabold") Localiza tu propiedad en segundos

        div(class="flex flex-col md:flex-row items-center py-10 gap-4 justify-center")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtra tu propiedad de acuerdo a tus necesidades:

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="tipos" class="text-sm w-24 uppercase text-gray-500 font-bold") Estatus
                select(id="tipos" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow text-center")
                    option(value="") - Selecciona - 
                    each tipo in tipos
                        option(value=tipo.id)= tipo.nombre

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-24 uppercase text-gray-500 font-bold") Categoria
                select(id="categorias" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow text-center")
                    option(value="") - Selecciona - 
                    each categoria in categorias
                        option(value=categoria.id)= categoria.nombre

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="text-sm w-24 uppercase text-gray-500 font-bold") Precio menor a
                select(id="precios" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow text-center")
                    option(value="") - Selecciona - 
                    each precio in precios
                        option(value=precio.precio)= precio.precio

        //-div(class="w-full md:w-full flex items-center gap-2")
                label(for="precios" class="text-sm w-24 uppercase text-gray-500 font-bold") Precios
                input(type="range" id="precios" min="1000" max=`${limite}` step='100' class="w-full h-2 bg-blue-100 appearance-none")

            
        div(id="mapa-inicio" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Casas en venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in casas
                    include ./templates/card

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Departamentos en venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in departamentos
                    include ./templates/card
        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Bodegas en venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in bodegas
                    include ./templates/card

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Terrenos en venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in terrenos
                    include ./templates/card
block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js") 